/* pages/index/index.wxss */

/* 容器样式 */
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background-color: #000000;
  color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  overflow: hidden;
}

/* 游戏标题 */
.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  color: #ffffff;
  text-align: center;
}

/* 游戏信息面板 */
.game-info {
  display: flex;
  justify-content: space-around;
  width: 90%;
  margin-bottom: 20rpx;
  padding: 10rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 10rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 80rpx;
}

.info-label {
  font-size: 24rpx;
  color: #cccccc;
}

.info-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

/* 游戏主区域 */
.game-main {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  width: 100%;
  margin-bottom: 20rpx;
}

/* 游戏区域 */
.game-area {
  position: relative;
  border: 2rpx solid #555555;
  background-color: rgba(0, 0, 0, 0.8);
  box-shadow: 0 0 20rpx rgba(255, 255, 255, 0.1);
}

/* 游戏网格背景 */
.game-grid {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.grid-cell {
  position: absolute;
  border: 0.5rpx solid #333333;
  box-sizing: border-box;
}

/* 已固定的方块 */
.fixed-blocks {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
}

/* 当前移动的方块 */
.current-tetromino {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 3;
}

/* 方块样式 */
.block {
  position: absolute;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  box-sizing: border-box;
  box-shadow: inset 0 0 10rpx rgba(255, 255, 255, 0.3);
}

/* 游戏信息侧边栏 */
.game-sidebar {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 20rpx;
}

/* 下一个方块预览 */
.next-tetromino-preview {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  min-width: 160rpx;
}

.preview-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #ffffff;
}

.preview-area {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-template-rows: repeat(4, 1fr);
  gap: 2rpx;
  width: 120rpx;
  height: 120rpx;
  border: 2rpx solid #555555;
  background-color: rgba(0, 0, 0, 0.5);
}

.preview-block {
  width: 28rpx;
  height: 28rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

/* 游戏控制按钮 */
.game-controls {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.control-button {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.start-button {
  background-color: #07c160;
  color: #ffffff;
}

.pause-button {
  background-color: #faad14;
  color: #ffffff;
}

/* 游戏操作按钮 */
.game-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 10rpx;
}

.action-row {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
}

.action-button {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 10rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.2s ease;
}

.action-button:active {
  background-color: rgba(255, 255, 255, 0.4);
  transform: scale(0.95);
}

.action-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #ffffff;
}

/* 游戏状态遮罩 */
.game-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.overlay-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  background-color: rgba(0, 0, 0, 0.8);
  border-radius: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.overlay-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.overlay-subtitle {
  font-size: 36rpx;
  color: #07c160;
  margin-bottom: 40rpx;
}

.overlay-score {
  font-size: 32rpx;
  color: #faad14;
  margin-bottom: 40rpx;
  font-weight: bold;
}

.overlay-desc {
  font-size: 28rpx;
  color: #cccccc;
}

/* 响应式设计 - 小屏幕设备适配 */
@media screen and (max-width: 320px) {
  .title {
    font-size: 36rpx;
  }
  
  .info-label {
    font-size: 22rpx;
  }
  
  .info-value {
    font-size: 32rpx;
  }
  
  .preview-title {
    font-size: 26rpx;
  }
  
  .preview-area {
    width: 100rpx;
    height: 100rpx;
  }
  
  .preview-block {
    width: 23rpx;
    height: 23rpx;
  }
  
  .action-button {
    width: 90rpx;
    height: 90rpx;
  }
  
  .action-text {
    font-size: 36rpx;
  }
}

/* 响应式设计 - 大屏幕设备适配 */
@media screen and (min-width: 414px) {
  .title {
    font-size: 44rpx;
  }
  
  .info-label {
    font-size: 26rpx;
  }
  
  .info-value {
    font-size: 40rpx;
  }
  
  .preview-title {
    font-size: 30rpx;
  }
  
  .preview-area {
    width: 140rpx;
    height: 140rpx;
  }
  
  .preview-block {
    width: 33rpx;
    height: 33rpx;
  }
  
  .action-button {
    width: 110rpx;
    height: 110rpx;
  }
  
  .action-text {
    font-size: 44rpx;
  }
}